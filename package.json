{
  "name": "news-api",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "develop": "nodemon server.js",
    "start": "export $(cat secrets/app.env) && yarn run-functions-framework",
    "deploy": "export $(cat secrets/infrastructure.env) && sh scripts/deploy.sh",
    "test": "jest --runInBand --detectOpenHandles",
    "coverage": "jest --coverage --runInBand --detectOpenHandles",
    "run-functions-framework": "functions-framework --target=app"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "firestore-admin": "^1.3.0",
    "uuid": "^8.3.0"
  },
  "devDependencies": {
    "@google-cloud/functions-framework": "^1.7.1",
    "dotenv": "^8.2.0",
    "nodemon": "^2.0.4",
    "jest": "25.4.0",
    "jest-when": "2.7.1",
    "supertest": "^4.0.2"
  }
}
